---
// Add props to customize shortcuts for each page
interface Props {
  subject?: string;
  page?: string;
}

const { subject, page } = Astro.props;

// Get all PDF files in the file structure
const data = await import.meta.glob("/src/files/**/*.pdf");

// Extract years from the file paths that match current subject and page
const extractYears = () => {
  const years: Set<number> = new Set();
  
  for (const file in data) {
    // Filter by subject and page if provided
    if (subject && !file.includes(`/src/files/${subject}/`)) {
      continue;
    }
    
    if (page && !file.includes(`/${page}/`) && page !== 'bac') {
      continue;
    }

    // Find years in the path (4 digit numbers that might be years)
    const yearMatches = file.match(/\/20\d{2}\//g);
    if (yearMatches) {
      yearMatches.forEach(match => {
        // Extract just the year (4 digits) and convert to number
        const year = parseInt(match.replace(/\//g, ''), 10);
        years.add(year);
      });
    }
  }
  
  // Return years in descending order
  return Array.from(years).sort((a, b) => b - a);
};

const availableYears = extractYears();

// Add a title based on the current page
const getTitle = () => {
  if (subject && page) {
    return `${subject.charAt(0).toUpperCase() + subject.slice(1)} - ${page.charAt(0).toUpperCase() + page.slice(1)}`;
  }
  return "Shortcuts";
}
---

<div class="shortcuts-container">
  <span class="text-lg font-bold text-white mb-2">Accesare rapidÄƒ</span>
  
  <div class="shortcuts-grid">
    {availableYears.map((year) => (
      <a 
        href={`#${year}`} 
        class="shortcut-button"
        title={`Salt la documentele din ${year}`}
      >
        {year}
      </a>
    ))}
  </div>
</div>

<style>
  .shortcuts-container {
    margin-bottom: 1.5rem;
  }

  .shortcuts-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .shortcut-button {
    background-color: #1e293b;
    color: #94a3b8;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
