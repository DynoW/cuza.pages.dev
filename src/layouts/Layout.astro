---
import {SEO} from "astro-seo";
interface Props {
    title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <SEO
            charset="UTF-8"
            title={title}
            description="Subiecte de bac din anii anteriori la fizica si matematica pentru liceeni si profesori. Parte din proiectul: DynoW/cuza.pages.dev"
            openGraph={{
                basic: {
                    title: title,
                    type: "website",
                    image: "https://cuza.pages.dev/assets/img/site-img.webp",
                },
            }}
            twitter={{
                creator: "@DynoW",
            }}
            extend={{
                link: [
                    {
                        rel: "apple-touch-icon",
                        type: "image/png",
                        sizes: "180x180",
                        href: "/assets/img/logo/atoms_180px.png",
                    },
                    {
                        rel: "icon",
                        type: "image/png",
                        sizes: "16x16",
                        href: "/assets/img/logo/atoms_16px.png",
                    },
                    {
                        rel: "icon",
                        type: "image/png",
                        sizes: "32x32",
                        href: "/assets/img/logo/atoms_32px.png",
                    },
                    {
                        rel: "icon",
                        type: "image/png",
                        sizes: "180x180",
                        href: "/assets/img/logo/atoms_180px.png",
                    },
                    {
                        rel: "icon",
                        type: "image/png",
                        sizes: "192x192",
                        href: "/assets/img/logo/atoms_192px.png",
                    },
                    {
                        rel: "icon",
                        type: "image/png",
                        sizes: "512x512",
                        href: "/assets/img/logo/atoms_512px.png",
                    },
                    {
                        rel: "shortcut icon",
                        type: "image/png",
                        sizes: "32x32",
                        href: "/assets/img/logo/atoms_32px.png",
                    },
                    {
                        rel: "manifest",
                        href: "/manifest.json",
                    },
                    {
                        rel: "sitemap",
                        type: "application/xml",
                        href: "sitemap-index.xml",
                    },
                ],
                meta: [
                    {
                        name: "viewport",
                        content:
                            "width=device-width, initial-scale=1.0, shrink-to-fit=no",
                    },
                    {
                        name: "twitter:image",
                        content:
                            "https://cuza.pages.dev/assets/img/site-img.webp",
                    },
                    {
                        name: "twitter:title",
                        content: title,
                    },
                    {
                        name: "twitter:description",
                        content:
                            "Subiecte de bac din anii anteriori la fizica si matematica pentru liceeni si profesori. Parte din proiectul: DynoW/cuza.pages.dev",
                    },
                    {
                        name: "theme-color",
                        content: "#0e1720",
                    },
                ],
            }}
        />
    </head>
    <body
        class="backgroundImage font-serif select-none overflow-x-hidden">
        <slot />
        <style is:global>
            @tailwind utilities;
            @layer utilities {
                @font-face {
                    font-family: Poppins;
                    src:    url('/assets/fonts/poppins-medium.woff2') format('woff2'),
                            url('/assets/fonts/poppins-medium.woff') format('woff');
                    font-display: swap;
                }
                @font-face {
                    font-family: Inter;
                    src:    url('/assets/fonts/inter-medium.woff2') format('woff2'),
                            url('/assets/fonts/inter-medium.woff') format('woff');
                    font-display: swap;
                }
                :root {
                    --bs-gutter-x: 1.5rem;
                    --bs-gutter-y: 0;
                }
                a {
                    transition: 0.2s;
                }
                .container {
                    width: 100%;
                    padding-right: calc(var(--bs-gutter-x) * 0.5);
                    padding-left: calc(var(--bs-gutter-x) * 0.5);
                }
                .row {
                    display: flex;
                    flex-wrap: wrap;
                }
                .row > * {
                    flex-shrink: 0;
                    width: 100%;
                    max-width: 100%;
                    padding-right: calc(var(--bs-gutter-x) * 0.5);
                    padding-left: calc(var(--bs-gutter-x) * 0.5);
                    margin-top: var(--bs-gutter-y);
                }
                .col {
                    flex: 1 0 0%;
                }
                .backgroundImage {
                    background: url(/assets/img/background/bg-pattern.png),
                        linear-gradient(to left, #212735, #337fd5);
                }
                .banner {
                    display: inline-block;
                    width: 980px;
                    height: calc(100vw - 300px);
                    background: url("/assets/img/banner/picture-9v2.webp")
                        center/100% no-repeat;
                    max-width: 100%;
                    height: 150px;
                }

                .banner:hover {
                    background: url("/assets/img/banner/picture-9v2-1.png")
                        center/100% no-repeat;
                    transition: 10s;
                    max-width: 100%;
                    max-height: 150px;
                }
                .altele-list {
                    @apply flex flex-col space-y-2 lg:space-y-1 text-slate-500;
                }
                .altele-link {
                    @apply hover:text-slate-300;
                }
                .altele-text {
                    @apply text-white;
                }
                .content-list {
                    @apply my-2 space-y-4 text-slate-600;
                }
                .content-link {
                    @apply hover:text-slate-900 focus:text-slate-900;
                }
                .content-text {
                    @apply text-gray-900;
                }
                .dropdown {
                    @apply relative inline-block;
                }

                .dropdown-content {
                    @apply hidden absolute border rounded-lg border-blue-950 -ml-5 z-10;
                }

                .dropdown-content a {
                    @apply border-2 bg-zinc-950/70 border-blue-950 py-1 px-3;
                }

                .dropdown:hover .dropdown-content, .dropdown:focus .dropdown-content {
                    @apply flex flex-col;
                }

                .dropdown .dropdown-content a:hover {
                    @apply bg-zinc-950/80;
                }
                .QR {
                    @apply max-md:hidden;
                }
            }
        </style>
    </body>
</html>
