        if (isMobile()){
            const allLinks = document.querySelectorAll('a');
            allLinks.forEach(link => {
                if (link.href.includes('/files/')) {
                    const regex = /.*\/files\//;
                    link.href = link.href.replace(regex, 'https://docs.google.com/gview?embedded=true&url=https://cuza.pages.dev/files/');
                    link.target = '_self'
