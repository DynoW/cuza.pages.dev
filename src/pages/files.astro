---
import Layout from '../layouts/Layout.astro';
import FileManager from '../components/FileManager';
import "../styles/file-manager.css";
---

<Layout title="File Manager - Cuza Pages" backgroundImage={false}>
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold text-white mb-6">File Manager</h1>
        <FileManager client:load workerUrl={import.meta.env.WORKER_URL || 'http://localhost:8787'} />
    </div>
</Layout>
