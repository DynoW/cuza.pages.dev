---
import Page from "../../components/Page.astro";
import { getValidSubjects, getFirstPage } from "../../utils/paths";

export function getStaticPaths() {
  const removedSubjects = ["fizica", "admitere"];
  const filteredSubjects = getValidSubjects().filter(
    (subject) => !removedSubjects.includes(subject)
  );

  return filteredSubjects.map((subject) => ({
    params: { subject },
  }));
}

// Get the dynamic route parameter
const { subject } = Astro.params;
const firstPage = getFirstPage(subject!);
---

<Page subject={subject} page={firstPage} />
