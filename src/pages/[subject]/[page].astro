---
import PageComponent from "../../components/Page.astro";
import { generateSubjectPagePaths } from "../../utils/paths";

export const getStaticPaths = generateSubjectPagePaths;

const subject = Astro.params?.subject;
const page = Astro.params?.page;

if (!subject || !page) {
  throw new Error(`Subject and page parameters are required. Received params: ${JSON.stringify(Astro.params)}`);
}
---

<PageComponent subject={subject} page={page} />
